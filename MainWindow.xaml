<Window x:Class="Flange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flange"
        xmlns:radio="clr-namespace:Flange.Other.WPF_override"
        mc:Ignorable="d"
        Title="Генератор фланцев" Background="Gray" Height="500" MinWidth="630" MinHeight="350"  Width="{Binding WindowWidth}" >
    <Grid Background="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Margin="0 -1" Background="White" Grid.ColumnSpan="3" Name="MainWindowMenu">
            <MenuItem Header="Справка" Name="HelpMenuItem" Visibility="{Binding HelpMenuVisibility}">
                <MenuItem  Header="О программе"></MenuItem>
                <MenuItem Header="Руководство"></MenuItem>

            </MenuItem>
            <MenuItem Header="Дополнительно" Name="ExtraMenuItem" Visibility="{Binding ExtraMenuVisibility}">
                <MenuItem Header="Просмотр 3д моделей">

                </MenuItem>
            </MenuItem>
            <MenuItem Header="Параметры приложения" Name="AppsConfigMenuItem">
                <MenuItem Header="Язык приложения"></MenuItem>
                <MenuItem Header="Шрифты и цвета"></MenuItem>
            </MenuItem>
            <MenuItem Header="Параметры изделия" Name="DateilConfigManuItem">
                <MenuItem Name="ExtraSizes"  Header="Дополнительные размеры"></MenuItem>
                <MenuItem Header="Материал детали"></MenuItem>
                <MenuItem Header="Параметры сохранения"></MenuItem>
            </MenuItem>
            <radio:RadioMenuItemBox Header="Выбор САПР системы" x:Name="ChooseCADMenuItem" >
                <radio:RadioMenuItem Header="КОМПАС-3D" x:Name="Kompas3DMenuItem" >
                    
                </radio:RadioMenuItem>
                <radio:RadioMenuItem Header="nanoCAD" x:Name="nanoCADMenuItem">

                </radio:RadioMenuItem>
            </radio:RadioMenuItemBox>

            <radio:RadioMenuItemBox Header="Тип фланца" x:Name="ChooseFlangeMenuItem">

                <radio:RadioMenuItem Header="Свободный" IsChecked = "{Binding IsFreeFlangeSelected}"></radio:RadioMenuItem>
                <radio:RadioMenuItem Header="Плоский" IsChecked = "{Binding IsFlatFlangeSelected}"></radio:RadioMenuItem>
                <radio:RadioMenuItem Header="Глухой" IsChecked="{Binding IsBlindFlangeSelected}"></radio:RadioMenuItem>
                <radio:RadioMenuItem Header="Воротниковый"  IsChecked="{Binding IsCollarFlangeSelected}"></radio:RadioMenuItem>
            </radio:RadioMenuItemBox>


            <MenuItem Header="Создать" Name="BuildMenuItem">
                <MenuItem Header="3д модель"></MenuItem>
                <MenuItem Header="2д чертёж"></MenuItem>
                <MenuItem Header="Сборку"></MenuItem>
            </MenuItem>
        </Menu>

        <Border Grid.Column="0" Grid.Row="1" BorderThickness="3" BorderBrush="Black" >
            <Image Name="SketchImage"  Stretch="Fill" Source="{Binding BitmapImage}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0" />
        </Border>
        <DataGridRow  Name="StandartSizesTable" Grid.Column="1" Grid.Row="1">

        </DataGridRow>

        <Rectangle Grid.Column="2" Grid.Row="1" Stretch="Fill" >
           
        </Rectangle>
    </Grid>
</Window>
