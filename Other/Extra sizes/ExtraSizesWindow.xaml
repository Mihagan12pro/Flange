<Window x:Class="Flange.Other.Extra_sizes.ExtraSizesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flange.Other.Extra_sizes"
        mc:Ignorable="d"
        Title="Дополнительные размеры"  Height="300" MinWidth="300" Width="{Binding WindowWidth}" Background="Azure" Name="ExtraWnd"  >

    <Grid >
        <TabControl Name="RibbonTCrl">
            <TabItem Header="Главная" Name="MainItem">
                <Grid Name="ExtraGr"  Margin="0,-1,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="0.2*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <DataGrid Name ="ExtraSizesTableGr"  Grid.Row="0" Grid.Column="1" Margin="-1, 16"></DataGrid>

                    <Border Name="StackPanelBr" BorderBrush="AntiqueWhite" BorderThickness="2" Margin="0,201,2,0" Grid.Column="1" Grid.RowSpan="2">
                        <StackPanel Name="ButtonsMainStPl" Background="AliceBlue" Orientation="Vertical" HorizontalAlignment="Center" Grid.Column="1" Grid.RowSpan="2" Grid.Row="1" Width="140" Margin="-1">
                            <Button Name="AcceptBtn" Content="Применить" FontSize="8" Width="130" Height="15" Margin="1"  />
                            <Button x:Name="DeleteCurrentSizebtn"  Content="Удалить выбранный размер" Height="14" FontSize="8" Width="130" Margin="2" />
                            <Button Name="deleteAllBtn" Content="Удалить все размеры" FontSize="8" Height="16" Width="130" Margin="1"></Button>
                        </StackPanel>
                    </Border>


                    <Border Name="SketchBr" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="2">

                    </Border>

                </Grid>
            </TabItem>

            <TabItem Header="Отверстия D2">

            </TabItem>




        </TabControl>
    </Grid>
</Window>
