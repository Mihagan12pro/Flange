<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:override="clr-namespace:Flange.Other.WPF_override">
    
    <Style x:Key="Fieldset" TargetType="Border">
        <Setter Property="CornerRadius" Value="4"></Setter>
        <Setter Property="BorderBrush" Value="Black"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="Margin" Value="10 5"></Setter>
        <Setter Property="Background" Value="White"></Setter>
    </Style>

    <Style x:Key="Form" TargetType="Border">
        <Setter Property="CornerRadius" Value="6"></Setter>
        <Setter Property="BorderBrush" Value="Black"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="Margin" Value="10 5"></Setter>
        <Setter Property="Background" Value="White"></Setter>
    </Style>

    <Style x:Key="FormLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="GOST Type A"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Width" Value="30"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
    </Style>

    <Style x:Key="FormParametreText" TargetType="override:ParametersBox">
        <Setter Property="Margin" Value="0 2 2 2"></Setter>
        <Setter Property="FontFamily" Value="Gost Type A"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>
</ResourceDictionary>